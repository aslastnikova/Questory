<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/side_nav_bar"
    android:weightSum="10"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:scaleType="centerCrop"
        android:tint="#FFFFFF"
        app:srcCompat="@drawable/absbackground" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_weight="0"

        />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:adjustViewBounds="false"
        android:minWidth="70dp"
        android:minHeight="50dp"
        android:tint="@color/white"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <LinearLayout
        android:id="@+id/linVerify"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:weightSum="10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:paddingBottom="40dp"
            app:srcCompat="@drawable/paper_plane3" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="Проверьте почту!"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="@font/pt_sans" />

        <TextView
            android:id="@+id/verify_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.8"
            android:gravity="center"
            android:text="@string/verify_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal"
            app:fontFamily="@font/pt_sans" />

        <Button
            android:id="@+id/verify_button"
            android:textColor="@color/colorPrimaryDark"
            android:backgroundTint="#F0F0F0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Открыть почту" />

        <TextView
            android:id="@+id/verify_text2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="top|center"
            android:text="Щелкните здесь для повторной отправки письма"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal"
            app:fontFamily="@font/pt_sans" />
    </LinearLayout>


</LinearLayout>