<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_findquests">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.questory3.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_message"
        android:name="com.example.questory3.ui.message.MessageFragment"
        android:label="@string/menu_message"
        tools:layout="@layout/fragment_message" />

    <fragment
        android:id="@+id/nav_forcheck"
        android:name="com.example.questory3.ui.forcheck.ForCheckFragment"
        android:label="@string/forcheck"
        tools:layout="@layout/fragment_forcheck" />

    <fragment
        android:id="@+id/nav_findquests"
