        tools:layout="@layout/fragment_startedquests" />
    <fragment
        android:id="@+id/nav_endedquests"
        android:name="com.example.questory3.ui.endedQuests.EndedQuestsFragment"
        android:label="@string/endedquests"
        tools:layout="@layout/fragment_endedquests" />

    <fragment
        android:id="@+id/nav_share"
        android:name="com.example.questory3.ui.share.ShareFragment"
        android:label="@string/menu_share"
        tools:layout="@layout/fragment_share" />

    <fragment
        android:id="@+id/nav_send"
        android:name="com.example.questory3.ui.send.SendFragment"
        android:label="@string/todevelopers"
        tools:layout="@layout/fragment_send" />
